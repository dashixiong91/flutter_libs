{
  "tasks": [
    {
      "type": "shell",
      "label": "build cpp test",
      "command": "/usr/bin/clang++",
      "args": [
        "-g",
        "${workspaceFolder}/cpp/test/app-ffi_test.cc",
        "${workspaceFolder}/cpp/src/*.cc",
        "-framework",
        "JavaScriptCore",
        "-I",
        "${workspaceFolder}/cpp/include",
        "-o",
        "${workspaceFolder}/build/${workspaceFolderBasename}.out",
      ],
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "group": "build",
      "problemMatcher":"$gcc"
    },
  ],
  "version": "2.0.0"
}