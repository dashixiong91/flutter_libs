{
  "tasks": [
    {
      "type": "shell",
      "label": "build cpp file",
      "command": "/usr/bin/clang++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "group": "build",
      "problemMatcher":"$gcc"
    }
  ],
  "version": "2.0.0"
}